<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.livroandroid.suporte_financeiro.Fragments.Relatorio.VisualizarJunho"
    android:orientation="vertical">

        <TextView
            android:text="@string/essencial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="41dp"
            android:id="@+id/textViewImportanteJunho" />

        <TextView
            android:text="@string/valor_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewQuantidadeJunho"
            android:layout_toEndOf="@+id/textViewImportanteJunho"
            android:layout_marginStart="23dp"
            android:id="@+id/textViewTotalImportanteJunho" />

        <TextView
            android:text="@string/despesas_lazer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:id="@+id/textViewLazerJunho"
            android:layout_below="@+id/textViewQuantJunho"
            android:layout_alignStart="@+id/textViewQuantidadeJunho" />

        <TextView
            android:text="@string/valor_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewQuantLJunho"
            android:layout_alignEnd="@+id/textViewTotalImportanteJunho"
            android:id="@+id/textViewTotalLJunho" />

        <TextView
            android:text="@string/quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:id="@+id/textViewQuantidadeJunho"
            android:layout_below="@+id/textViewImportanteJunho"
            android:layout_alignStart="@+id/textViewImportanteJunho" />

        <TextView
            android:text="@string/Zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewQuLJunho"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/textViewQuantJunho" />

        <TextView
            android:text="@string/Zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewVTJunho"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/textViewTotalLJunho" />

        <TextView
            android:text="@string/investimentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewQuLJunho"
            android:layout_alignStart="@+id/textViewQuantLJunho"
            android:layout_marginTop="36dp"
            android:id="@+id/textViewInvestimentoJunho" />

        <TextView
            android:text="@string/quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:id="@+id/textViewQuantInvestimentoJunho1"
            android:layout_below="@+id/textViewInvestimentoJunho"
            android:layout_alignEnd="@+id/textViewInvestimentoJunho" />

        <TextView
            android:text="@string/Zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewVTInvestimentoJunho"
            android:layout_alignBaseline="@+id/textViewQuantInvestimentoJunho"
            android:layout_alignBottom="@+id/textViewQuantInvestimentoJunho"
            android:layout_alignEnd="@+id/textViewVTJunho" />

        <TextView
            android:text="@string/valor_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewVTInvestimentoJunho1"
            android:layout_alignBaseline="@+id/textViewQuantInvestimentoJunho1"
            android:layout_alignBottom="@+id/textViewQuantInvestimentoJunho1"
            android:layout_toEndOf="@+id/textViewLazerJunho" />

        <TextView
            android:text="@string/Zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:id="@+id/textViewQuantJunho"
            android:layout_below="@+id/textViewQuantidadeJunho"
            android:layout_toStartOf="@+id/textViewTotalImportanteJunho" />

        <TextView
            android:text="@string/quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewQuantLJunho"
            android:layout_above="@+id/textViewQuLJunho"
            android:layout_alignStart="@+id/textViewLazerJunho"
            android:layout_marginBottom="19dp" />

        <TextView
            android:text="@string/Zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTotalJunho"
            android:layout_above="@+id/textViewLazerJunho"
            android:layout_toStartOf="@+id/textViewVTJunho" />

        <TextView
            android:text="@string/Zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:id="@+id/textViewQuantInvestimentoJunho"
            android:layout_below="@+id/textViewQuantInvestimentoJunho1"
            android:layout_alignStart="@+id/textViewQuLJunho" />
</RelativeLayout>
