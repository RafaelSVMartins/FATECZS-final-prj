    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="br.com.livroandroid.suporte_financeiro.Fragments.usuarios.CadastrarUsuario">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tnome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome usuário:"/>

            <EditText
                android:id="@+id/cadu_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_below="@+id/tnome"
                android:layout_alignParentStart="true"
                android:text="Digite o nome do usuário"/>

            <Button
                android:id="@+id/button3"
                android:text="Cadastrar Usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cadu_nome"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="28dp"
                 />
        </RelativeLayout>
    </LinearLayout>

