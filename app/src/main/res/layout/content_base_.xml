<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.Base_Activity"
    tools:showIn="@layout/app_bar_base_">


    <!--Conteúdo: layout de marcação para Fragment-->

    <Button
        android:background="@drawable/despesa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="97dp"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/renda"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/button2"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="38dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@drawable/investimento"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button2"
        android:layout_alignEnd="@+id/button"
        android:layout_marginTop="48dp"
        android:id="@+id/button4" />

    <Button
        android:background="@drawable/listadecompras"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/button4"
        android:layout_alignStart="@+id/button2"
        android:id="@+id/button5" />

    <TextView
        android:text="Despesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/button"
        android:layout_marginEnd="13dp"
        android:id="@+id/textViewDespesaButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="Rendas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewDespesaButton"
        android:layout_alignStart="@+id/button2"
        android:layout_marginStart="12dp"
        android:id="@+id/textViewRendasButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="arial" />

    <TextView
        android:text="Investimentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textViewInvButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <TextView
        android:text="Lista Compras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewInvButton"
        android:layout_alignStart="@+id/textViewRendasButton"
        android:id="@+id/textViewCompras"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="arial" />


</RelativeLayout>
